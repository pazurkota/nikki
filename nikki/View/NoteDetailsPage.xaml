<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="nikki.View.NoteDetailsPage">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Note content:" FontSize="18" FontAttributes="Bold" />
            <Label Text="{Binding Text}" FontSize="16" TextColor="{StaticResource Tertiary}" />
            <Label Text="{Binding Created, StringFormat='Added: {0:dd.MM.yyyy HH:mm}'}"
                   FontSize="12" TextColor="{StaticResource Black}" HorizontalOptions="End"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>